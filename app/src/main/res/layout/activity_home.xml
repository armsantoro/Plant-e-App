<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SplashScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:backgroundTint="@color/teal_700"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/plante"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/vermin_vibes"
        android:text="PLANT - E"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="63sp" />

    <TextView
        android:id="@+id/armandosantoro"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/vermin_vibes"
        android:text="Armando Santoro"
        android:textColor="#DAE3E3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pwrdby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/vermin_vibes"
        android:text="POWERED BY"
        android:textColor="#B3E8EF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="216dp"
        android:contentDescription="TODO"
        android:fadeScrollbars="false"
        android:src="@drawable/plantecolor" />

</RelativeLayout>